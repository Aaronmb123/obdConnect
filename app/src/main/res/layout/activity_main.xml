<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.bakeaaro.obdconnect.MainActivity">

    <Button
        android:id="@+id/reset_str_buffer_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset String Buffer"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/paired_devices_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Get OBDII"/>
            <TextView
                android:id="@+id/paired_devices_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="paired"/>

            <TextView
                android:id="@+id/device_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="device"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/connect_button"
                android:text="Connect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/rfcomm_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="rfcomm"/>
            <TextView
                android:id="@+id/connected_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="connected"/>
            <TextView
                android:id="@+id/inputstream_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="input"/>
            <TextView
                android:id="@+id/outputstream_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="output"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/send_reset_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reset OBD"/>
            <TextView
                android:id="@+id/reset_sent_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="reset sent"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/echo_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Echo Off"/>
            <TextView
                android:id="@+id/echo_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="echo"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/line_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Line Feed Off"/>
            <TextView
                android:id="@+id/line_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="line"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/select_protocol_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Auto Protocol"/>
            <TextView
                android:id="@+id/protocol_sent_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="protocol sent"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/verify_protocol_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Verify Protocol"/>
            <TextView
                android:id="@+id/verify_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="verify sent"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/send_rpm_button"
            android:text="Send RPM Command"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/send_speed_button"
            android:text="Send Speed Command"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView
        android:id="@+id/send_cmds_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="sent cmds"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/recv_input_button"
                android:text="Recv Input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/recv_input_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="recv: "/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/disconnect_button"
                android:text="Disconnect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/error_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="error"/>

        </LinearLayout>

    </LinearLayout>











</LinearLayout>
